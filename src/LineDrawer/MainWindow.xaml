<Window x:Class="LineDrawer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Name="NamedWindow"
        Title="LineDrawer" Height="800" Width="1000"
        xmlns:local="clr-namespace:LineDrawer"
        Closing="MainWindow_OnClosing">
    <Window.DataContext>
        <local:DrawingModel/>
    </Window.DataContext>
    
    <DockPanel>
        <!-- Меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Вид">
                <MenuItem x:Name="ParametersMenuItem" Header="Параметры" Click="ParametersMenuItem_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Основная область -->
        <Grid>
            <Image Name="MainImage"
                   Stretch="Fill"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   SizeChanged="MainImage_OnSizeChanged"
                   RenderOptions.BitmapScalingMode="Fant"/>
            
            <Canvas Name="MainCanvas" Background="Blue"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"/>
        </Grid>
    </DockPanel>
</Window>
