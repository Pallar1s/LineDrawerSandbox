<Window x:Class="LineDrawer.ParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Параметры суставов" Height="600" Width="800"
        WindowStartupLocation="Manual"
        ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Общая скорость:" FontWeight="Bold"/>
            <Slider 
                    Value="{Binding Path=OverallSpeed, Mode=TwoWay}"
                    IsSnapToTickEnabled="True" 
                    Maximum="50" TickPlacement="BottomRight" TickFrequency="2"
                    AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="2"/>
            
            <!-- Настройки отрисовки -->
            <GroupBox Header="Настройки отрисовки" Margin="0,10,0,10">
                <StackPanel Margin="10">
                    <!-- Общие переключатели отрисовки -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Толщина линии:" Margin="0,0,10,0"/>
                        <ComboBox IsEditable = "True" Width="50" SelectedValuePath="Content" Text="{Binding Path=LineThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0">
                            <ComboBoxItem><sys:Int32>1</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>2</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>3</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>4</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>5</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>6</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>8</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>10</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>12</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>16</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>20</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>24</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>28</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>32</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>36</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>40</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>44</sys:Int32></ComboBoxItem>
                            <ComboBoxItem><sys:Int32>48</sys:Int32></ComboBoxItem>
                        </ComboBox>
                        <CheckBox Content="Показывать суставы" IsChecked="{Binding Path=ShowJoints, Mode=TwoWay}" Margin="0,0,10,0"/>
                        <CheckBox Content="Показывать след" IsChecked="{Binding Path=ShowTrace, Mode=TwoWay}" Margin="0,0,10,0"/>
                        <CheckBox Content="Градиентный след" IsChecked="{Binding Path=UseGradient, Mode=TwoWay}"/>
                        
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Антиалиасинг -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <CheckBox Content="Включить антиалиасинг" IsChecked="{Binding Path=EnableAntialiasing, Mode=TwoWay}" Margin="0,0,0,5"/>
                            <TextBlock Text="Уровень антиалиасинга:" FontSize="12"/>
                            <Slider 
                                Value="{Binding Path=AntialiasingLevel, Mode=TwoWay}"
                                IsSnapToTickEnabled="True" 
                                Minimum="1" Maximum="5" TickPlacement="BottomRight" TickFrequency="1"
                                AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"
                                IsEnabled="{Binding Path=EnableAntialiasing}"/>
                        </StackPanel>
                        
                        <!-- Сглаживание -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <CheckBox Content="Включить сглаживание" IsChecked="{Binding Path=EnableSmoothing, Mode=TwoWay}" Margin="0,0,0,5"/>
                            <TextBlock Text="Уровень сглаживания:" FontSize="12"/>
                            <Slider 
                                Value="{Binding Path=SmoothingLevel, Mode=TwoWay}"
                                IsSnapToTickEnabled="True" 
                                Minimum="1" Maximum="10" TickPlacement="BottomRight" TickFrequency="1"
                                AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"
                                IsEnabled="{Binding Path=EnableSmoothing}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </GroupBox>
            
            <TextBlock Text="Пресеты" FontWeight="Bold" Margin="0,10,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0" Name="PresetsComboBox" DisplayMemberPath="Name" ItemsSource="{Binding Path=Presets}" SelectionChanged="PresetsComboBox_OnSelectionChanged"/>
                <Button Grid.Column="1" x:Name="AddPresetButton" Click="AddPresetButton_Click" Content="+" Width="25" Height="25" Margin="5,0,0,0"/>
                <Button Grid.Column="2" x:Name="RemovePresetButton" Click="RemovePresetButton_Click" Content="-" Width="25" Height="25" Margin="5,0,0,0"/>
                <Button Grid.Column="3" x:Name="SavePresetButton" Click="SavePresetButton_Click" Content="Сохранить все" Width="90" Height="25" Margin="5,0,0,0"/>
                <Button Grid.Column="4" x:Name="LoadPresetButton" Click="LoadPresetButton_Click" Content="Загрузить все" Width="90" Height="25" Margin="5,0,0,0"/>
            </Grid>
            <TextBlock Text="Название" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Name="PresetName" Text="{Binding Path=CurrentPreset.Name}"/>
        </StackPanel>
        
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Параметры суставов" FontWeight="Bold" Margin="0,0,0,5"/>
            <DataGrid Grid.Row="1" x:Name="JointsGrid" 
                      CanUserResizeColumns="True" 
                      CanUserReorderColumns="True" 
                      CanUserSortColumns="true" 
                      CanUserResizeRows="false" 
                      AutoGenerateColumns="False" 
                      ItemsSource="{Binding Path=CurrentPreset.Joints,Mode=TwoWay}"
                      GridLinesVisibility="All"
                      HeadersVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Размер" Binding="{Binding Size, Mode=TwoWay}" Width="60"/>
                    <DataGridTextColumn Header="Скорость" Binding="{Binding Speed, Mode=TwoWay}" Width="80"/>
                    <DataGridCheckBoxColumn Header="Вкл" Binding="{Binding Enabled, Mode=TwoWay}" Width="40"/>
                    <DataGridCheckBoxColumn Header="Пульсация" Binding="{Binding PulseEnabled, Mode=TwoWay}" Width="70"/>
                    <DataGridTextColumn Header="Мин. коэф." Binding="{Binding PulseMinCoef, Mode=TwoWay, StringFormat=F2}" Width="80"/>
                    <DataGridTextColumn Header="Скор. пульсации" Binding="{Binding PulseSpeed, Mode=TwoWay, StringFormat=F2}" Width="100"/>
                    <DataGridTemplateColumn Header="Цвет" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <xctk:ColorPicker SelectedColor="{Binding JointColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                  ShowAvailableColors="False" 
                                                  ShowStandardColors="True" 
                                                  ShowRecentColors="False"
                                                  Width="60" Height="20"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="RandomizeButton" ToolTip="Randomize joints" Click="RandomizeButton_Click" Content="???" Width="90" Height="25" Margin="5,0"/>
            <Button x:Name="ResetButton" Click="ResetButton_OnClick" Content="Restart" Width="80" Height="25" Margin="5,0"/>
            <Button x:Name="CloseButton" Click="CloseButton_OnClick" Content="Закрыть" Width="80" Height="25" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window> 