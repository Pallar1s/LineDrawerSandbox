<Window x:Class="LineDrawer.Windows.ShaderSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LineDrawer"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Шейдеры" Height="350" Width="500">
    <Window.Resources>
        <ObjectDataProvider x:Key="PostEffectModesProvider"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:PostEffectMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <CheckBox Content="Включить эффект" 
                      IsChecked="{Binding EnablePostEffect, Mode=TwoWay}"/>
            <TextBlock Text="Шейдер:" Margin="20,0,5,0" VerticalAlignment="Center"/>
            <ComboBox Width="180"
                      ItemsSource="{Binding Source={StaticResource PostEffectModesProvider}}"
                      SelectedItem="{Binding PostEffectMode, Mode=TwoWay}"/>
        </StackPanel>
        
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ShaderParameters}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Параметр" Binding="{Binding DisplayName}" IsReadOnly="True" Width="2*"/>
                <DataGridTextColumn Header="Значение" Width="2*" IsReadOnly="False">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Value" Mode="TwoWay" UpdateSourceTrigger="LostFocus" StringFormat="F3"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Мин" Binding="{Binding Min}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Макс" Binding="{Binding Max}" IsReadOnly="True" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

